<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/another_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trip_duration"
                android:layout_marginTop="2dp"
                android:text="Twoja ocena"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/trip_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/end_date"
                android:layout_marginTop="2dp"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/Title"
                android:text="TextView"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_date"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/trip_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/another_label"
                android:background="@android:color/transparent"
                android:isIndicator="true"
                android:numStars="6"
                android:stepSize="1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/trip_rate"
                android:layout_marginBottom="5dp"
                app:srcCompat="@color/cast_expanded_controller_ad_label_background_color" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>