<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:background="@color/wallet_bright_foreground_holo_dark"
    android:minWidth="100dp">

    <TextView
        android:id="@+id/optionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/optionCheck"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <CheckBox
        android:id="@+id/optionCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:buttonTint="@color/cast_intro_overlay_background_color" />
</RelativeLayout>