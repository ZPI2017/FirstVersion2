<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trip_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                android:background="@android:color/black"
                android:padding="2dp"
                android:scaleType="fitXY"
                app:srcCompat="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/trip_name"
            android:labelFor="@+id/trip_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RatingBar
            android:id="@+id/recomended_trip_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trip_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:isIndicator="true"
            android:numStars="6"
            android:stepSize="0.1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrzykÅ‚adowe atrakcje:"
            android:layout_alignTop="@+id/trip_cover"
            android:layout_toRightOf="@+id/trip_cover"
            android:layout_toEndOf="@+id/trip_cover"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/attraction0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cast_expanded_controller_seekbar_thumb"
            android:layout_alignTop="@+id/trip_cover"
            android:layout_toRightOf="@+id/trip_cover"
            android:layout_toEndOf="@+id/trip_cover"
            android:layout_marginTop="38dp" />

        <TextView
            android:id="@+id/attraction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/cast_expanded_controller_seekbar_thumb"
            android:layout_below="@+id/attraction0"
            android:layout_alignLeft="@+id/attraction0"
            android:layout_alignStart="@+id/attraction0"
            android:layout_toRightOf="@+id/trip_cover" />

        <TextView
            android:id="@+id/attraction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/attraction1"
            android:layout_alignStart="@+id/attraction1"
            android:layout_below="@+id/attraction1"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/cast_expanded_controller_seekbar_thumb"
            android:layout_toRightOf="@+id/trip_cover" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>